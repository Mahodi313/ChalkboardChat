@page
@model ChalkboardChat.UI.Pages.Member.IndexModel
@{
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <form method="post"><button type="submit" class="btn btn-primary m-2">Logout</button></form>
                
                <div class="card-header">
                    <h3 class="text-center">Welcome @Model.Username!</h3>
                </div>
                <div class="card-body">
                    <p class="text-center">You are logged in. What would you like to do?</p>
                    <div class="text-center">
                        <a asp-page="/Member/Posts" class="btn btn-success">Go to Message Board</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>