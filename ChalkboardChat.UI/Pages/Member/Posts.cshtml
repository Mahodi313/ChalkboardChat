@page
@model ChalkboardChat.UI.Pages.Member.PostsModel
@{
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-center ">Message Board</h3>
                </div>
                <div class="card-body">
                    <!-- Form for posting a message -->
                    <form method="post" class="mb-4">
                        <div class="form-group">
                            <label for="message">Write your message:</label>
                            <textarea class="form-control" id="message" rows="3" asp-for="Message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Post Message</button>
                    </form>

                    <!-- Display existing messages -->
                    <div class="list-group">
                        @foreach (var message in Model.Messages)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@message.Username</h5>
                                    <small>@message.Date.ToShortDateString()</small>
                                </div>
                                <p class="mb-1">@message.Message</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>